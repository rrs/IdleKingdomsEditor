<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd NLog.xsd"
      autoReload="true"
      throwExceptions="false"
      internalLogLevel="Off" internalLogFile="c:\temp\nlog-internal.log">
  <variable name="standard" value="Date: ${longdate} - ${logger} - ${level}${newline}${message}${newline}${exception:format=tostring}"/>
  <targets>
    <target xsi:type="File" name="f" fileName="${specialfolder:folder=MyDocuments}/IdleKingdomsEditor/logs/todays.log" layout="${standard}" 
            archiveFileName="${specialfolder:folder=MyDocuments}/IdleKingdomsEditor/logs/{#}.log"
            archiveEvery="Day"
            archiveNumbering="Date"
            maxArchiveFiles="7" />
  </targets>
  <rules>
    <logger name="*" minlevel="Error" writeTo="f" />
  </rules>
</nlog>
